{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter Web",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "deviceId": "web-server",
      "args": ["--web-port", "3000", "--web-hostname", "0.0.0.0"]
    },
    {
      "name": "Flutter Chrome",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "deviceId": "chrome"
    },
    {
      "name": "Flutter Test",
      "type": "dart",
      "request": "launch",
      "program": "test/",
      "args": ["--coverage"]
    }
  ]
}
