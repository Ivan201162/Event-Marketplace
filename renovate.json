    },
    {
      "matchPackagePatterns": ["^share_plus"],
      "groupName": "Share packages",
      "labels": ["dependencies", "share", "automated"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "vulnerability", "urgent"]
  },
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "branchPrefix": "renovate/",
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 9am on monday"]
  },
  "rangeStrategy": "bump",
  "bumpVersion": "patch",
  "recreateClosed": true,
  "rebaseWhen": "behind-base-branch",
  "platformAutomerge": true,
  "automerge": false,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "requiredStatusChecks": ["test", "build", "security-scan"],
  "ignoreTests": false,
  "ignorePaths": [
    "test/",
    "integration_test/",
    "lib/generated/",
    "lib/l10n/",
    "*.g.dart",
    "*.freezed.dart",
    "*.mocks.dart"
  ]
}
