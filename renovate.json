    },
    {
      "matchPackagePatterns": ["^printing"],
      "groupName": "Printing packages",
      "labels": ["dependencies", "printing", "automated"]
    },
    {
      "matchPackagePatterns": ["^path_provider"],
      "groupName": "Path packages",
      "labels": ["dependencies", "path", "automated"]
    },
    {
      "matchPackagePatterns": ["^googleapis"],
      "groupName": "Google API packages",
      "labels": ["dependencies", "google", "automated"]
    },
    {
      "matchPackagePatterns": ["^googleapis_auth"],
      "groupName": "Google Auth packages",
      "labels": ["dependencies", "google", "automated"]
    },
    {
      "matchPackagePatterns": ["^icalendar_parser"],
      "groupName": "Calendar packages",
