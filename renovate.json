      "labels": ["dependencies", "emoji", "automated"]
    },
    {
      "matchPackagePatterns": ["^audioplayers"],
      "groupName": "Audio Player packages",
      "labels": ["dependencies", "audio", "automated"]
    },
    {
      "matchPackagePatterns": ["^fl_chart"],
      "groupName": "Chart packages",
      "labels": ["dependencies", "chart", "automated"]
    },
    {
      "matchPackagePatterns": ["^video_player"],
      "groupName": "Video packages",
      "labels": ["dependencies", "video", "automated"]
    },
    {
      "matchPackagePatterns": ["^photo_view"],
      "groupName": "Photo packages",
      "labels": ["dependencies", "photo", "automated"]
