{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:weekly"
  ],
  "timezone": "UTC",
  "schedule": [
    "before 9am on monday"
  ],
  "labels": [
    "dependencies",
    "automated"
  ],
  "assignees": [
    "event-marketplace-team"
  ],
  "reviewers": [
    "event-marketplace-team"
  ],
  "commitMessagePrefix": "chore:",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "packageRules": [
    {
      "matchPackageNames": ["flutter"],
      "allowedVersions": "3.35.x",
      "enabled": false
    },
    {
      "matchPackageNames": ["dart"],
      "allowedVersions": "3.5.x",
      "enabled": false
    },
    {
      "matchPackagePatterns": ["^flutter_"],
      "groupName": "Flutter packages",
      "labels": ["dependencies", "flutter", "automated"]
    },
    {
      "matchPackagePatterns": ["^firebase_"],
      "groupName": "Firebase packages",
      "labels": ["dependencies", "firebase", "automated"]
    },
    {
      "matchPackagePatterns": ["^riverpod"],
      "groupName": "Riverpod packages",
      "labels": ["dependencies", "riverpod", "automated"]
    },
    {
      "matchPackagePatterns": ["^go_router"],
      "groupName": "Navigation packages",
      "labels": ["dependencies", "navigation", "automated"]
    },
    {
      "matchPackagePatterns": ["^flex_color_scheme"],
      "groupName": "Theme packages",
      "labels": ["dependencies", "theme", "automated"]
    },
    {
      "matchPackagePatterns": ["^flutter_localizations"],
      "groupName": "Localization packages",
      "labels": ["dependencies", "localization", "automated"]
    },
    {
      "matchPackagePatterns": ["^intl"],
      "groupName": "Internationalization packages",
      "labels": ["dependencies", "i18n", "automated"]
    },
    {
      "matchPackagePatterns": ["^shared_preferences"],
      "groupName": "Storage packages",
      "labels": ["dependencies", "storage", "automated"]
    },
    {
      "matchPackagePatterns": ["^http"],
      "groupName": "Network packages",
      "labels": ["dependencies", "network", "automated"]
    },
    {
      "matchPackagePatterns": ["^cached_network_image"],
      "groupName": "Image packages",
      "labels": ["dependencies", "image", "automated"]
    },
    {
      "matchPackagePatterns": ["^file_picker"],
      "groupName": "File packages",
      "labels": ["dependencies", "file", "automated"]
    },
    {
      "matchPackagePatterns": ["^image_picker"],
      "groupName": "Camera packages",
      "labels": ["dependencies", "camera", "automated"]
    },
    {
      "matchPackagePatterns": ["^url_launcher"],
