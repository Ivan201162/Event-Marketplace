    },
    {
      "matchPackagePatterns": ["^device_info_plus"],
      "groupName": "Device Info packages",
      "labels": ["dependencies", "device", "automated"]
    },
    {
      "matchPackagePatterns": ["^google_maps_flutter"],
      "groupName": "Maps packages",
      "labels": ["dependencies", "maps", "automated"]
    },
    {
      "matchPackagePatterns": ["^geolocator"],
      "groupName": "Location packages",
      "labels": ["dependencies", "location", "automated"]
    },
    {
      "matchPackagePatterns": ["^geocoding"],
      "groupName": "Geocoding packages",
      "labels": ["dependencies", "geocoding", "automated"]
    },
    {
      "matchPackagePatterns": ["^connectivity_plus"],
      "groupName": "Connectivity packages",
      "labels": ["dependencies", "connectivity", "automated"]
    },
    {
      "matchPackagePatterns": ["^crypto"],
      "groupName": "Crypto packages",
      "labels": ["dependencies", "crypto", "automated"]
    },
    {
      "matchPackagePatterns": ["^encrypt"],
      "groupName": "Encryption packages",
      "labels": ["dependencies", "encryption", "automated"]
    },
    {
      "matchPackagePatterns": ["^local_auth"],
      "groupName": "Local Auth packages",
      "labels": ["dependencies", "auth", "automated"]
    },
    {
      "matchPackagePatterns": ["^flutter_secure_storage"],
