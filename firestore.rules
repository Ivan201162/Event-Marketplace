rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Функции для проверки авторизации
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }
    
    function isParticipant(chatId) {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/chats/$(chatId)) &&
        (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants);
    }
    
    // Публичное чтение постов (лента). Запись только аутентифицированным.
    match /posts/{postId} {
      allow read: if true; // Public read
      allow create: if isSignedIn() && 
        request.resource.data.authorId == request.auth.uid;
      allow update: if isSignedIn() && 
        request.auth.uid == resource.data.authorId;
      allow delete: if isSignedIn() && 
        request.auth.uid == resource.data.authorId;
      match /post_likes/{likeId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow delete: if isSignedIn() && 
          request.auth.uid == resource.data.userId;
      }
      match /post_comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && 
          request.auth.uid == resource.data.authorId;
      }
      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && 
          request.auth.uid == resource.data.authorId;
      }
    }

    // Чаты — только для участников чата
    match /chats/{chatId} {
      allow read, update, delete: if isSignedIn() && 
        (request.auth.uid in resource.data.participants);
      allow create: if isSignedIn() && 
        (request.auth.uid in request.resource.data.participants);
      
      match /messages/{messageId} {
        allow read: if isSignedIn() && isParticipant(chatId);
        allow create: if isSignedIn() && request.auth.uid == request.resource.data.senderId && isParticipant(chatId);
        allow update, delete: if false;
      }
    }
    
    // Messages root collection (if used)
    match /messages/{messageId} {
      allow read, write: if isSignedIn() && 
        request.auth.uid in get(/databases/$(database)/documents/chats/$(resource.data.chatId)).data.participants;
    }

    // Бронирования — только авторизованным
    match /bookings/{bookingId} {
      allow read, write: if isSignedIn();
    }

    // Пользователи
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
      match /saved_ideas/{docId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Специалисты — публичное чтение, запись только владельцу
    match /specialists/{specialistId} {
      allow read: if isSignedIn();
      allow create: if isOwner(specialistId);
      allow update: if isOwner(specialistId);
      allow delete: if isOwner(specialistId);
      match /cases/{caseId} {
        allow read: if isSignedIn();
        allow create: if isOwner(specialistId);
        allow update: if isOwner(specialistId);
        allow delete: if isOwner(specialistId);
      }
    }

    // События — публичное чтение, запись только авторизованным
    match /events/{eventId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // Отзывы — публичное чтение, запись только авторизованным
    match /reviews/{reviewId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // Уведомления — только для владельца
    match /notifications/{notificationId} {
      allow read, write: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    // Категории — публичное чтение, запись только админам
    match /categories/{categoryId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && 
        request.auth.token.admin == true;
    }

    // Тарифы/планы — публичное чтение, запись только админам
    match /tariffs/{tariffId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && 
        request.auth.token.admin == true;
    }

    // Планы — публичное чтение, запись только админам
    match /plans/{planId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && 
        request.auth.token.admin == true;
    }

    // Сторисы — только для авторизованных (24h TTL)
    match /stories/{storyId} {
      allow read: if true; // Public read for active stories
      allow create: if isSignedIn() && 
        request.resource.data.authorId == request.auth.uid;
      allow update: if isSignedIn() && 
        request.auth.uid == resource.data.authorId;
      allow delete: if isSignedIn() && 
        request.auth.uid == resource.data.authorId;
    }

    // Идеи — публичное чтение
    match /ideas/{ideaId} {
      allow read: if true; // Public read
      allow create: if isSignedIn() && 
        request.resource.data.authorId == request.auth.uid;
      allow update: if isSignedIn() && 
        request.auth.uid == resource.data.authorId;
      allow delete: if isSignedIn() && 
        request.auth.uid == resource.data.authorId;
      match /idea_likes/{likeId} {
        allow read: if true;
        allow write: if isSignedIn() && request.auth.uid == likeId;
      }
      match /idea_comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && 
          request.auth.uid == resource.data.authorId;
      }
    }

    // Заявки — создание доступно всем авторизованным
    match /requests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.createdBy == request.auth.uid;
      allow read: if isSignedIn();
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.createdBy;
    }

    // Подписки — только для авторизованных
    match /follows/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && 
        request.resource.data.followerId == request.auth.uid;
      allow delete: if isSignedIn() && 
        resource.data.followerId == request.auth.uid;
      allow update: if false;
    }
    
    // Реклама — только для авторизованных
    match /ads/{doc=**} { 
      allow read: if isSignedIn(); 
    }

    // События аналитики — запись только авторизованным с проверкой владельца
    match /events_profile_views/{eventId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && 
        request.resource.data.viewerId == request.auth.uid;
      allow update, delete: if false; // События неизменяемы после создания
    }

    match /events_post_engagement/{eventId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && 
        request.resource.data.actorId == request.auth.uid;
      allow update, delete: if false;
    }

    match /events_follow/{eventId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && 
        request.resource.data.followerId == request.auth.uid;
      allow update, delete: if false;
    }

    match /events_requests/{eventId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (
        request.resource.data.customerId == request.auth.uid ||
        (request.resource.data.status == 'completed' && 
         request.resource.data.specId == request.auth.uid)
      );
      allow update, delete: if false;
    }

    // Статистика и рейтинги — только чтение для клиентов, запись только сервисному аккаунту
    match /specialist_stats/{specId} {
      allow read: if isSignedIn();
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }

    match /specialist_scores/{specId} {
      allow read: if isSignedIn();
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }

    // Служебные коллекции для дедупликации и rate limiting — только сервисный аккаунт
    match /dedup_profile_views/{docId} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }

    match /rate_limits/{docId} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }

    // Остальное — запрещено
    match /{document=**} {
      allow read, write: if false;
    }
  }
}