rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Функции для проверки авторизации
    function isSignedIn() { 
      return request.auth != null; 
    }
    
    function isOwner(uid) { 
      return isSignedIn() && request.auth.uid == uid; 
    }
    
    // Публичное чтение постов (лента). Запись только аутентифицированным.
    match /posts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && 
        request.resource.data.authorId == request.auth.uid;
      allow update: if isSignedIn() && 
        (request.auth.uid == resource.data.authorId || 
         request.auth.uid in resource.data.moderators);
      allow delete: if isSignedIn() && 
        request.auth.uid == resource.data.authorId;
      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && 
          request.auth.uid == resource.data.authorId;
      }
    }

    // Чаты — только для участников чата
    match /chats/{chatId} {
      allow read, write: if isSignedIn() && 
        request.auth.uid in resource.data.members;
      allow create: if isSignedIn() && 
        request.auth.uid in request.resource.data.members;
      
      match /messages/{messageId} {
        allow read: if isSignedIn() && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members;
        allow create: if isSignedIn() && 
          request.auth.uid == request.resource.data.senderId &&
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members;
        allow update: if isSignedIn() && 
          request.auth.uid == resource.data.senderId;
        allow delete: if isSignedIn() && 
          request.auth.uid == resource.data.senderId;
      }
    }

    // Бронирования — только авторизованным
    match /bookings/{bookingId} {
      allow read, write: if isSignedIn();
    }

    // Пользователи
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
      match /saved_ideas/{docId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Специалисты — публичное чтение, запись только владельцу
    match /specialists/{specialistId} {
      allow read: if isSignedIn();
      allow create: if isOwner(specialistId);
      allow update: if isOwner(specialistId);
      allow delete: if isOwner(specialistId);
    }

    // События — публичное чтение, запись только авторизованным
    match /events/{eventId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // Отзывы — публичное чтение, запись только авторизованным
    match /reviews/{reviewId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // Уведомления — только для владельца
    match /notifications/{notificationId} {
      allow read, write: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    // Категории — публичное чтение, запись только админам
    match /categories/{categoryId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && 
        request.auth.token.admin == true;
    }

    // Тарифы/планы — публичное чтение, запись только админам
    match /tariffs/{tariffId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && 
        request.auth.token.admin == true;
    }

    // Планы — публичное чтение, запись только админам
    match /plans/{planId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && 
        request.auth.token.admin == true;
    }

    // Сторисы — только для авторизованных
    match /stories/{storyId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && 
        request.resource.data.authorId == request.auth.uid;
      allow update: if isSignedIn() && 
        request.auth.uid == resource.data.authorId;
      allow delete: if isSignedIn() && 
        request.auth.uid == resource.data.authorId;
    }

    // Идеи — только для авторизованных
    match /ideas/{ideaId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && 
        request.resource.data.authorId == request.auth.uid;
      allow update: if isSignedIn() && 
        request.auth.uid == resource.data.authorId;
      allow delete: if isSignedIn() && 
        request.auth.uid == resource.data.authorId;
    }

    // Заявки — только для авторизованных
    match /requests/{requestId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && 
        request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && 
        request.auth.uid == resource.data.ownerId;
      allow delete: if isSignedIn() && 
        request.auth.uid == resource.data.ownerId;
    }

    // Подписки — только для авторизованных
    match /follows/{doc=**} { 
      allow read, write: if isSignedIn(); 
    }
    
    // Реклама — только для авторизованных
    match /ads/{doc=**} { 
      allow read: if isSignedIn(); 
    }

    // Остальное — запрещено
    match /{document=**} {
      allow read, write: if false;
    }
  }
}