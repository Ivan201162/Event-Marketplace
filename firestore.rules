rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Публичное чтение идей (лента). Запись только аутентифицированным.
    match /ideas/{ideaId} {
      allow read: if true;
      allow create: if request.auth != null && 
        request.auth.uid == resource.data.authorId;
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.authorId || 
         request.auth.uid in resource.data.moderators);
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.authorId;
      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && 
          request.auth.uid == resource.data.authorId;
      }
    }

    // Чаты — только для авторизованных
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
    match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }

    // Бронирования — только авторизованным
    match /bookings/{bookingId} {
      allow read, write: if request.auth != null;
    }

    // Пользователи
    match /users/{userId} {
      allow read: if request.auth != null; // только авторизованные могут читать
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId; // редактировать только своё
      allow delete: if request.auth != null && request.auth.uid == userId;
      match /saved_ideas/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Специалисты — публичное чтение, запись только владельцу
    match /specialists/{specialistId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == specialistId;
      allow update: if request.auth != null && request.auth.uid == specialistId;
      allow delete: if request.auth != null && request.auth.uid == specialistId;
    }

    // События — публичное чтение, запись только авторизованным
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Отзывы — публичное чтение, запись только авторизованным
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Уведомления — только для владельца
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Остальное — запрещено
    match /{document=**} {
      allow read, write: if false;
    }
  }
}