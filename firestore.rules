rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Публичное чтение постов (лента). Запись только аутентифицированным.
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null && 
        request.auth.uid == resource.data.authorId;
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.authorId || 
         request.auth.uid in resource.data.moderators);
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.authorId;
      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && 
          request.auth.uid == resource.data.authorId;
      }
    }

    // Чаты — только для участников чата
    match /chats/{chatId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.participants;
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.participants;
      
      match /messages/{messageId} {
        allow read: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        allow create: if request.auth != null && 
          request.auth.uid == request.resource.data.senderId &&
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        allow update: if request.auth != null && 
          request.auth.uid == resource.data.senderId;
        allow delete: if request.auth != null && 
          request.auth.uid == resource.data.senderId;
      }
    }

    // Бронирования — только авторизованным
    match /bookings/{bookingId} {
      allow read, write: if request.auth != null;
    }

    // Пользователи
    match /users/{userId} {
      allow read: if request.auth != null; // только авторизованные могут читать
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId; // редактировать только своё
      allow delete: if request.auth != null && request.auth.uid == userId;
      match /saved_ideas/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Специалисты — публичное чтение, запись только владельцу
    match /specialists/{specialistId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == specialistId;
      allow update: if request.auth != null && request.auth.uid == specialistId;
      allow delete: if request.auth != null && request.auth.uid == specialistId;
    }

    // События — публичное чтение, запись только авторизованным
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Отзывы — публичное чтение, запись только авторизованным
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Уведомления — только для владельца
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Категории — публичное чтение, запись только админам
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }

    // Тарифы/планы — публичное чтение, запись только админам
    match /tariffs/{tariffId} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }

    // Планы — публичное чтение, запись только админам
    match /plans/{planId} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }

    // Остальное — запрещено
    match /{document=**} {
      allow read, write: if false;
    }
  }
}